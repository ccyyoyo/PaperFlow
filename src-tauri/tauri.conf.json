{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "PaperFlow",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "pnpm --dir app dev",
    "beforeBuildCommand": "pnpm --dir app build",
    "devPath": "http://localhost:5173",
    "distDir": "../app/dist"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "targets": ["nsis", "msi"],
      "icon": ["icons/icon.ico"],
      "resources": [],
      "identifier": "com.paperflow.app"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "PaperFlow",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
