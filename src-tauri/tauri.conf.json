{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PaperFlow",
  "version": "0.1.0",
  "identifier": "com.paperflow.app",
  "build": {
    "beforeDevCommand": "pnpm --dir ../app dev",
    "beforeBuildCommand": "pnpm --dir ../app build",
    "frontendDist": "../app/dist"
  },
  "app": {
    "windowsSubsystem": "windows",
    "security": {
      "csp": null
    }
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "targets": ["nsis", "msi"],
      "icon": ["icons/icon.ico"],
      "resources": []
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "PaperFlow",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
